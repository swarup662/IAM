@model IAM_UI.Models.CompanyWiseRoleMapModel
@{
    ViewData["Title"] = "Company Wise Role Map";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<style>
    .submenu {
        background-color: #f9f9f9; /* Light background for submenus */
        padding: 10px; /* Add padding for clarity */
    }

    .stylish-label {
        font-weight: bold;
        font-family: 'Arial', sans-serif; /* Replace 'Arial' with your preferred font */
        font-size: 1.1rem; /* Adjust size as desired */
        color: #333; /* Adjust color as desired */
        letter-spacing: 0.5px;
    }

    .checkbox-container {
        display: flex; /* Use flexbox for responsive layout */
        flex-wrap: wrap; /* Allow wrapping of columns */
        margin: 10px 0; /* Vertical spacing */
    }

    .checkbox-box {
        flex: 1 1 30%; /* Allow three columns */
        max-height: 200px; /* Set maximum height for scrolling */
        overflow-y: auto; /* Enable vertical scrolling when content exceeds height */
        padding: 10px; /* Padding around the checkboxes */

        border-radius: 4px; /* Rounded corners */
        margin-right: 10px; /* Space between columns */
        PADDING-LEFT: 10%;
    }

        .checkbox-box:last-child {
            margin-right: 0; /* Remove margin for the last column */
        }

    .checkbox-box .form-check {
        display: flex; /* Use flexbox for label and input alignment */
        align-items: center; /* Center vertically */
        padding: 5px; /* Space between individual checkboxes */
    }

            .checkbox-box .form-check .form-check-input {
        margin-right: 8px; /* Space between checkbox and label */
    }

    .text-muted {
        color: #6c757d; /* Bootstrap muted text color */
        padding: 5px 0; /* Padding for the message */
    }

    .dropdown-item {
        padding: 5px 10px; /* Padding for dropdown items */
    }

        .dropdown-item .form-check {
            margin: 5px 0; /* Space between job role checkboxes */
        }

</style>


<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="card border-top border-0 border-4 border-info">
                <div class="card-body" style="padding-bottom: 10px; padding-top: 7px; box-shadow: 2px 2px 5px Gray;">
                    <div class="d-flex justify-content-between align-items-center breadcrumb mt-1  mb-1 mr- ml-0">
                        <div class="navbar-brand mb-0"><h4>Comapany Wise Role Map</h4> </div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><span>Dasboard</span></li>
                                <li class="breadcrumb-item"><i class="lni lni-chevron-right"></i></li>
                                <li class="breadcrumb-item"><span>Role Master</span></li>
                                <li class="breadcrumb-item"><i class="lni lni-chevron-right"></i></li>
                                <li class="breadcrumb-item active" aria-current="page">Comapany Wise Role Map</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card border-top border-0 border-4 border-info">
                <div class="card-body" style=" box-shadow: 2px 2px 5px Gray">
                    <div class="row">
                        <div class="col-12">
                            <div class="row mb-2">
                          
                                <div class="col-sm-4">
                                    <span class="Add" style="display:none">
                                    <button type="button" class="btn btn-success waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#CompanyWiseRoleMapModal"><i class="mdi mdi-plus-circle me-2"></i> Add Record</button>
                                </span>
                                </div>
                                

                                <div class="col-sm-8">
                                    <div class="text-sm-end">
                                        <button type="button" style="display:none" class="btn btn-info mb-2 me-1">Import</button>
                                        <button type="button" style="display:none" class="btn btn-info mb-2 me-1">Export Pdf</button>
                                        <button type="button" style="display:none" class="btn btn-blue mb-2 me-1">Export Excel</button>
                                        <button type="button" style="display:none" class="btn btn-primary mb-2 me-1">Print</button>
                                        <button type="button" class="btn btn-primary waves-effect waves-light" id="RefreshModel"><i class="mdi mdi-cloud-refresh me-2"></i> Refresh</button>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="dynamicTable_CompanyWiseRoleMap" class="table table-striped table-bordered" style="width:100% ;text-align:center">
                                    <thead class="table-secondary">
                                        <tr>
                                            <th>Sl No</th>
                                            <th>Company</th>
                                            <th>Role</th>
                                        
                                            <th>User Category</th>
                                            <th>Department</th>

                                            <th>Action</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @{
                                            int count = 0;
                                        }
                                        @foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewBag.CommonGridData).Rows)
                                        {
                                            count++;
                                            <tr>

                                                <td>@count</td>

                                                <td>@row[1]</td>
                                                <td>@row[3]</td>
                                                <td>@row[5]</td>
                                                <td>@row[7]</td>
                                               
                                           
                                                <td>
                                                    <span class="Edit" style="display:none">
                                                    <a href="javascript:;" class="action-icon EditButton">
                                                        <i class="mdi mdi-square-edit-outline"
                                                           onclick="EditItem_CompanyWiseRoleMap(@row[0],@row[2], @row[4],@row[6]) "
                                                           data-toggle="tooltip"
                                                           title="Edit"
                                                           style="color:forestgreen"></i>
                                                    </a>
                                                    </span>

                                                    <span class="View" style="display:none">
                                                        <a href="javascript:;" class="action-icon EditButton">
                                                        <i class="mdi mdi-eye-circle-outline"
                                                               onclick="EditItem_CompanyWiseRoleMap(@row[0],@row[2], @row[4],@row[6])"
                                                               data-toggle="tooltip"
                                                               title="View"
                                                               style="color:forestgreen"></i>
                                                        </a>
                                                        </span>

                                                    <span class="Delete" style="display:none">
                                                    <a href="javascript:;" class="action-icon DeleteButton">
                                                        <i class="mdi mdi-delete"
                                                           onclick="DeleteItem_CompanyWiseRoleMap(@row[0],@row[2], @row[4],@row[6])"
                                                           data-toggle="tooltip"
                                                           title="Delete"
                                                           style="color:red"></i>
                                                    </a>
                                                    </span>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>


                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal for Role Wise Application -->
<div class="modal fade" id="CompanyWiseRoleMapModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal needs-validation", enctype = "multipart/form-data", novalidate = "true" }))
            {
                <div class="modal-header border-bottom border-0 border-4 border-info" style="background-color: #85b1b4;">
                    <h5 class="modal-title showCls" id="staticBackdropLabel">CompanyWiseRoleMap Form:: [New]</h5>
                 
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-xl-12 mx-auto">
                            <div class="card border">
                                <div class="card-body">

                                  

                                    <!-- First Row: Role and user category -->
                                    <div class="row mb-3">
                                        <div class="col-md-2">
                                            <label for="CompanyId" class="form-label">Company<sup style="color:red">*</sup>:</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.CompanyId, ViewBag.Company as SelectList, new { @class = "form-select", autocomplete = "off" })
                                        </div>

                                        <div class="col-md-2">
                                           <label for="UserTypeId" class="form-label">
                                            Role<sup style="color:red">*</sup>:
                                            </label>
                                        </div>
                                        <div class="col-md-4">
                                            <select class="form-select" id="UserTypeId">
                                                <option>----Select Role----</option>
                                            </select>
                                           
                                        </div>
                                       
                                    </div>
                                    <!-- Second Row: Company and Department -->
                                    <div class="row mb-3">
                                        

                                        <div class="col-md-2">
                                            <label for="" class="form-label">User Category<sup style="color:red">*</sup>:</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.UserCategoryId, ViewBag.UserCategory as SelectList, new { @class = "form-select", autocomplete = "off" })
                                        </div>
                                        <div class="col-md-2">
                                            <label for="DepartmentId" class="form-label">Department<sup style="color:red">*</sup>:</label>
                                        </div>
                                        <div class="col-md-4">
                                            <select class="form-select" id="DepartmentId">
                                                <option>----Select Department----</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Third Row: Designation and Job Role -->
                                    <div class="row mb-3">
                                        <div class="col-md-2">
                                            <label for="DesignationId" class="form-label">Designation<sup style="color:red">*</sup>:</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card">
                                                <div class="card-header bg-primary py-2 text-white d-flex justify-content-between align-items-center" style="height: calc(2.25rem + 2px);">
                                                 @*    <h5 class="card-title mb-0 text-white">Designation</h5> *@
                                                    <div class="card-widgets ms-auto">
                                                        <!-- Added ms-auto here -->
                                                        <a href="javascript:;" data-toggle="reload"><i class="mdi mdi-refresh"></i></a>
                                                        <!-- Bootstrap collapse toggler with plus/minus icon -->
                                                        <a href="javascript:;" class="collapse-toggle" data-target="#cardCollapseDesignation">
                                                            <i class="mdi mdi-minus"></i> <!-- Initially minus -->
                                                        </a>
                                                        <a href="#" data-toggle="remove"><i class="mdi mdi-close"></i></a>
                                                    </div>
                                                </div>
                                                <div id="cardCollapseDesignation" class="collapse show">
                                                    <div class="card-body">
                                                        <div id="DesignationIdContainer" class="checkbox-container">
                                                            <div class="checkbox-box" id="DesignationId">
                                                                <!-- Individual designation checkboxes will be added here dynamically -->
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>




                                        </div>
                                        <div class="col-md-2">
                                            <label for="JobRoleId" class="form-label">Job Role<sup style="color:red">*</sup>:</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card">
                                                <div class="card-header bg-primary py-2 text-white d-flex align-items-center" style="height: calc(2.25rem + 2px);">
                                                 @*    <h5 class="card-title mb-0 text-white">JobRole</h5> *@
                                                    <div class="card-widgets ms-auto">
                                                        <!-- Added ms-auto here -->
                                                        <a href="javascript:;" data-toggle="reload"><i class="mdi mdi-refresh"></i></a>
                                                        <!-- Bootstrap collapse toggler with plus/minus icon -->
                                                        <a href="javascript:;" class="collapse-toggle" data-target="#cardCollapseJobrole">
                                                            <i class="mdi mdi-minus"></i> <!-- Initially minus -->
                                                        </a>
                                                        <a href="#" data-toggle="remove"><i class="mdi mdi-close"></i></a>
                                                    </div>
                                                </div>
                                                <div id="cardCollapseJobrole" class="collapse show">
                                                    <div class="card-body">
                                                        <div id="JobRoleContainer" class="checkbox-container">
                                                            <div class="checkbox-box" id="JobRoleId" style="max-height: 200px; overflow-y: auto;">
                                                                <!-- Individual job role checkboxes will be added here dynamically -->
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        
                                          
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="modal-footer">
                    <span class="ModalView" style="display:none">
                    <button type="button" id="SaveCompanyWiseRoleMap" name="SaveRoleWiseApplication" class="btn btn-success">
                        <i class="fas fa-save"></i>&nbsp; Submit
                    </button>
                    </span>
                    <a href="javascript:;" id="Close" class="btn btn-warning"><i class="mdi mdi-close"></i>&nbsp; Close</a>
                </div>
            }
        </div>
    </div>
</div>

@section dateScript {


    <script>
        $(document).ready(function () {

            var message = '@TempData["MSG"]';
            if (message == "success") {
                Swal.fire("Done", "Record Saved Successfully !!", "success");
            } else if (message == "exist") {
                Swal.fire("Oops!!!", "Record already exists", "error");
            } else if (message == "Fail") {
                Swal.fire("Oops!!!", "Please Contact Admin", "error");
            }
        });

        $(document).ready(function () {
            $('.collapse-toggle').on('click', function () {
                var targetId = $(this).data('target'); // Get the target collapse ID
                var icon = $(this).find('i'); // Find the icon within the clicked element

                // Toggle the collapse class on the target
                if ($(targetId).hasClass('show')) {
                    $(targetId).removeClass('show').addClass('collapse');
                    icon.removeClass('mdi-minus').addClass('mdi-plus'); // Change icon to +
                } else {
                    $(targetId).removeClass('collapse').addClass('show');
                    icon.removeClass('mdi-plus').addClass('mdi-minus'); // Change icon to -
                }
            });
        });



    </script>
    <script src="~/js/companywiserolemap.js"></script>
   
}