    .spinner-border {
        width: 3rem;
        height: 3rem;
    }

    .biometric-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        font-size: 1.5rem;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        border: 4px solid white;
        color: white;
        transition: transform 0.2s, box-shadow 0.2s;
